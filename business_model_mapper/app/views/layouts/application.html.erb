<!DOCTYPE html>
<html>
  <head>
    <title>Business Model Mapper</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">

      <header class="header">
        <%#= image_tag("logo.png", alt: "logo", class: "logo") %>
        <%#= svg_asset("magnifying-glass", class: "logo") %>
        <div class="logo">
            <%= svg_asset("flowchart", class:"logo__image") %>
          <div class="logo__text">
            Business Model Mapper
          </div>
        </div>
        


        <form action="#" class="search">
          <input type="text" class="search__input" placeholder="Search for resource, project etc">
          <button class="search__button">
            <%= svg_asset("magnifying-glass", class: "search__icon") %>
          </button>
        </form>

        <nav class="user-nav">
          <div class="user-nav__icon-box">
            <%= svg_asset("bar-graph", class:"user-nav__icon-box__icon") %>
          </div>
          <%= link_to businesses_path do %>
            <div class="user-nav__icon-box">
              <%= svg_asset("flow-tree", class:"user-nav__icon-box__icon") %>
            </div> 
          <% end%>
          <div class="user-nav__user">
            <%#= image_tag("user.jpg", alt: "User photo", class: "user-nav__user-photo") %>
            <%= svg_asset("user", class:"user-nav__user__icon") %>
            <span class="user-nav__user-name">
              <% if user_signed_in? %> 
                <%= current_user.name ? current_user.name : current_user.first_name %><br />
                <%= link_to '(Logout)', destroy_user_session_path, :method => :delete %> 
              <% else %>
                <%= link_to "Sign in/ Sign up", new_user_session_path %>
              <% end %>         
            </span>
          </div>
        </nav>
      </header>

      <div class="sidebar">
        <div class="config-box">
          <div class="">
            Configuration or Settings
          </div>
          <div class="">
            <%= svg_asset("settings-gears", class:"config-box__icon") %>
          </div>
        </div>
      </div>
        
      <section class="map">
        <%= yield %> 
      </section>

      <footer class="footer">
        footer
      </footer>
    
  </body>
  
</html>