
<section class= "universal-container">

    <div class="universal-pagetitle">
        Edit Project > <%= link_to @business.name, business_path(@business) %> >  <%= @project.name%> 
    </div>
  
    <div class="universal-form">
        <%= form_for [@strategic_goal,@project] do |f| %>
          
            <%= f.hidden_field :strategic_goal_id %>

            <div class="universal-form__field">
                <%= f.label :name %>
                <%= f.text_field :name, class:"universal-form__field__input"%>
                <span class="focus-border"></span>
            </div>

            <%# @resources.each_with_index do |resource, index| %>
                <%= f.fields_for :resources do |r| %>
                <div class="resource-holder">
                    <div class="universal-form__field">
                        <%= r.label :name, "Resource #{+1}" %>
                        <%= r.text_field :name, class:"universal-form__field__input" %>
                        <span class="focus-border"></span>
                    </div> 
                    <div class="universal-form__field">
                        <%= r.label :resource_type %><br />
                        <%= r.select :resource_type, options_for_select(["Staff", "Hardware", "Software", "Fixture"]),{}, {class: "universal-form__field__input"} %>
                        <span class="focus-border"></span>
                    </div> 
                    <div class="universal-form__field">
                        <%= r.label :total_cost_year, "Total Year Cost" %><br />
                        <%= r.number_field :total_cost_year, class:"universal-form__field__input" %>
                        <span class="focus-border"></span>
                    </div> 
                    <div class="universal-form__field">
                        <%= r.label :Qty %><br />
                        <%= r.number_field :qty, class:"universal-form__field__input" %>
                        <span class="focus-border"></span>
                    </div>
                    <div class="">
                        <%= link_to 'Delete', resource_path(:resource),method: :delete, data: {confirm: 'Are you sure?' }%>
                    </div>
                    
                                    
                </div>
                <% end %>

            <%# end %>
                
        <div class="submit-button">
            <%= f.submit 'Edit Project', class: 'sub-btn'%>
        </div>

        <% end %>

        <div class="delete-button">
            <%= button_to 'Show' ' Project', strategic_goal_project_path(@strategic_goal, @project),method: :get, class: 'del-btn', id: 'show-project-btn', strategic_goal_id: @strategic_goal.id, project_id: @project.id%>
        </div>

        <div class="delete-button">
            <%= button_to 'Delete' ' Project', strategic_goal_project_path(@strategic_goal, @project),method: :delete, class: 'del-btn', data: {confirm: 'Are you sure?' }%>
        </div>
    </div>
</section>